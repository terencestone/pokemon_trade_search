<form id="new-user" action="/users" method="post">
  <table>

    <tr>
      <td><label for= "username">Username</label></td>
      <td><input type="text" name="user[username]"></td>
    </tr>

    <tr>
    <td><label for= "email">Email</label></td>
    <td><input type="text" name="user[email]"></td>
    </tr>

    <tr>
    <td><label for= "password">Password</label></td>
    <td><input type="password" name="user[password]"></td>
    </tr>

    <tr>
    <td><label for= "location">Location</label></td>
    <td><input type="text" name="user[location]"></td>
    </tr>

    <tr>
    <td><label for= "avatar">Avatar</label></td>
    <td><input type="text" name="user[avatar]" placeholder="Add a link to a small picture"></td>
    </tr>

    <tr>
    <td><label for= "IGN">DS IGN</label></td>
    <td><input type="text" name="user[IGN]"></td>
    </tr>

    <tr>
    <td><label for= "showdown_handle">Showdown Handle</label></td>
    <td><input type="text" name="user[showdown_handle]"></td>
    </tr>

    <tr>
    <td><label for= "TCG_handle">Card Game Handle</label></td>
    <td><input type="text" name="user[TCG_handle]"></td>
    </tr>

    <tr>
    <td><label for= "favorite_pokemon">Favorite Pokemon</label></td>
    <td><input type="text" name="user[favorite_pkmn]"></td>
    </tr>

    <tr>
    <td><label for= "about">About</label></td>
    <td><textarea rows="10" cols="50" name="user[about]"></textarea></td>
    </tr>
  </table>
  <input id="submit" type="submit" name="Create!">
</form>
